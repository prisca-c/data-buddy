{
  "name": "data-buddy",
  "version": "0.0.1",
  "description": "Data Buddy helps you to store and retrieve data from local json files",
  "type": "module",
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "clean": "del-cli dist",
    "lint": "eslint . --ext=.ts",
    "build": "pnpm run clean && pnpm run compile",
    "compile": "tsup-node"
  },
  "keywords": [],
  "author": "prisca-c",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./main": "./dist/src/data_buddy.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/prisca-c/data-buddy.git"
  },
  "devDependencies": {
    "@adonisjs/eslint-config": "^1.1.9",
    "@adonisjs/prettier-config": "^1.1.9",
    "@adonisjs/tsconfig": "^1.1.9",
    "@types/node": "^20.9.4",
    "del-cli": "^5.1.0",
    "jest": "^29.7.0",
    "shx": "^0.3.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "tsup": "^8.0.1"
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/data_buddy.ts",
      "./src/data_buddy_utils.ts"
    ],
    "outDir": "./dist",
    "clean": true,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  }
}
