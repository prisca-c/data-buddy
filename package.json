      "import": "./dist/*.js"
    }
  },
  "devDependencies": {
    "@adonisjs/eslint-config": "^1.1.9",
    "@adonisjs/prettier-config": "^1.1.9",
    "@types/node": "^20.9.4",
    "del-cli": "^5.1.0",
    "jest": "^29.7.0",
    "shx": "^0.3.4",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
