{
  "name": "data-buddy",
  "version": "0.0.3-2",
  "description": "Data Buddy helps you to store and retrieve data from local json files",
  "type": "module",
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "clean": "del-cli dist",
    "lint": "eslint . --ext=.ts",
    "build": "pnpm run clean && pnpm run compile",
    "compile": "tsup-node",
    "publish": "pnpm run build && pnpm publish",
    "publish:latest": "npm run publish --tag latest",
    "publish:next": "npm run publish --tag next",
    "test": "node --loader ts-node/esm --enable-source-maps bin/test.ts"
  },
  "keywords": [],
  "author": "prisca-c",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./init": "./dist/src/data_buddy.js",
    "./cache": "./dist/src/cache.js",
    "./file": "./dist/src/file.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/prisca-c/data-buddy.git"
  },
  "devDependencies": {
    "@adonisjs/eslint-config": "^1.2.0",
    "@adonisjs/prettier-config": "^1.2.0",
    "@adonisjs/tsconfig": "^1.2.0",
    "@japa/assert": "2.0.0-2",
    "@japa/file-system": "^2.1.0",
    "@japa/runner": "3.0.0-9",
    "@swc/core": "^1.3.101",
    "@types/node": "^20.10.5",
    "del-cli": "^5.1.0",
    "prettier": "^3.1.1",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/data_buddy.ts",
      "./src/data_buddy_utils.ts",
      "./src/file.ts",
      "./src/cache.ts"
    ],
    "outDir": "./dist",
    "clean": true,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  }
}
