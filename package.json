{
  "name": "data-buddy",
  "version": "0.0.1",
  "description": "Data Buddy helps you to store and retrieve data from local json files",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
